<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stedroids.stedroids">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".global.SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".samplefragment.SampleFragmentActivity"></activity>
        <activity android:name=".couchdbfragment.CouchDBActivity"></activity>
        <activity android:name=".recyclerfragment.RecyclerActivity"></activity>
        <activity android:name=".remoteconfigfragment.RemoteConfigActivity"></activity>

    </application>

</manifest>